<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".KuenstlerPabloPicasso">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/pablopicasso_button1"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/white"
                android:text="Zurück"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pablopicasso_TextView"
        android:layout_width="224dp"
        android:layout_height="78dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="80dp"
        android:text="Pablo Picasso"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kuenstler_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Pablo Picasso war ein spanischer Maler, Bildhauer, Grafiker, Keramiker und Bühnenbildner. Er gilt als einer der bedeutendsten Künstler des 20. Jahrhunderts, bekannt für seine Mitbegründung des Kubismus und Werke wie 'Les Demoiselles d'Avignon' und 'Guernica'."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pablopicasso_TextView"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

            <ImageView
                android:id="@+id/beispielbild_1"
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:src="@drawable/pablopicasso1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kuenstler_info"
                app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/button_favorit_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Zu Favoriten hinzufügen"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/beispielbild_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Beispielbild 2 -->
            <ImageView
                android:id="@+id/beispielbild_2"
                android:layout_width="wrap_content"
                android:layout_height="544dp"
                android:src="@drawable/pablopicasso2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_favorit_34"
                app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/button_favorit_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Zu Favoriten hinzufügen"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/beispielbild_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>